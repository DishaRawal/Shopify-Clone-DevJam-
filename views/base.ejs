<div class="text-center center-div" >
    <div class="container w-25 border py-5" id="login">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <ol class="col-12 breadcrumb">
                <li class="breadcrumb-item ">LOGIN</li>
                <li class="breadcrumb-item active "><a href="./signup.html">SIGNUP</a></li>
            </ol>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email">
                <small class="form-text text-muted text-left">Registered email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>

</body>

